{
  "scenarios": [
    {
      "name": "login",
      "description": "Login process performance test",
      "steps": [
        {
          "action": "navigate",
          "url": "",
          "timeout": 50000
        },
        {
          "action": "wait",
          "selector": "#accountTypeSelect",
          "timeout": 5000
        },
        {
          "action": "fill",
          "selector": "#accountTypeSelect",
          "value": "${accountType}"
        },
        {
          "action": "fill",
          "selector": "input[name='username']",
          "value": "${username}"
        },
        {
          "action": "fill",
          "selector": "input[name='password']",
          "value": "${password}"
        },
        {
          "action": "click",
          "selector": "button[type='submit']"
        },
        {
          "action": "wait",
          "timeout": 10000
        }
      ],
      "expectedMetrics": {
        "lcp": 2500,
        "fid": 100,
        "cls": 0.1,
        "ttfb": 600,
        "totalLoadTime": 5000
      }
    },
    {
